<!-- HOME PAGE -->

<div id='home_page'>
  <div class="row">
      <div class="col s12 m10">
        <h1>Welcome</h1>
        <h5>Check out our wears!</h5>
        <button class='btn shop_now_button' >Shop Now!</button>
      </div>      
  </div>
</div>

<!-- SHOW ALL PRODUCTS -->

<div id='products' class='row hide'>
  <h1 class='center'>My Store</h1>
</div>

<!-- SHOW PRODUCT DIV -->
<div id='show_product_div' class='hide'>
  <div class="col s12 m3">
    <div class="card grey darken-3">
      <div class="card-content white-text">
        <span class="card-title product_name">
          
        </span>
        <p class='product_description'></p>
        <p class='product_price'>$ </p>
      </div>
      <div class="card-action">
        <a href="" id='back_button'>Back</a>
        <a href="" id='edit_button'>Edit</a>
        <a href="" id='delete_button'>Delete</a>
      </div>
    </div>
  </div>
</div>

<!-- FORM DIV -->

<div class="row hide" id='form_div'>
  <form class="col s12" id='form'>
    <h2 class='center'>Add Product</h2>
      <div class="input-field col s6 offset-s3">
        <label>Name</label>
        <input id="product_name" type="text" name="product[name]">
      </div>
      <div class="input-field col s6 offset-s3">
        <label>Description</label>
        <input id="product_description" type="text" name="product[description]">
      </div>
      <div class="input-field col s6 offset-s3">
        <label>Price</label>
        <input id="product_price" type="text" name="product[base_price]">
        <input type='submit' class='btn'>
      </div>

  </form>
</div>